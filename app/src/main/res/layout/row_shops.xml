<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/very_dark_gray"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_shear" />

        <View
            android:id="@+id/imageView4"
            android:layout_width="18dp"
            android:layout_height="128dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView3"
            android:background="@drawable/ic_line"
            android:layerType="software" />

        <TextView
            android:id="@+id/textView_shop_offer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_shop_offer_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_shop_offer_title"
            android:layout_below="@+id/textView_shop_offer_title"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView_shop_offer_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView3"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/ic_share_white_24dp" />

        <ImageView
            android:id="@+id/imageView_shop_offer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/imageView_shop_offer_share"
            app:srcCompat="@drawable/ic_phone_android_white_24dp" />

        <ImageView
            android:id="@+id/imageView_shop_offer_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/imageView_shop_offer_phone"
            app:srcCompat="@drawable/ic_favorite_border_24dp" />

        <Button
            android:id="@+id/button_shop_offer"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="88dp"
            android:backgroundTint="@color/white"
            android:text="Get Code"
            android:textColor="@color/appNameInHome"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>